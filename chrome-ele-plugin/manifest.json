{
    "name": "Ele Fetching Message",
    "version": "1.0",
    "description": "Fetch ele messages' status",
    "icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
    "background": {
        "page": "background.html"
    },
    "content_scripts": 
	[
		{
            "js": ["js/jquery-1.8.3.js"],
			"matches": ["<all_urls>"]
		}
	],
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "popup.html"
    },
    "manifest_version": 2
}